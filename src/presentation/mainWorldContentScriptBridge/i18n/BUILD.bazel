load("@fremtind_rules_vitest//vitest:defs.bzl", "vitest_test")
load("//tools:bazel/swc.bzl", "swc_pkg")
load("//tools:common_ts_project.bzl", "common_ts_project")

common_ts_project(
    name = "i18n",
    allow_js = True,
    declaration = True,
    source_map = True,
    transpiler = swc_pkg,
    tsconfig = "//:tsconfig_pkg",
    visibility = [
        "//src:infrastructure_presentation",
        "//src:presentation",
        # TODO(https://iavm.xyz/b/twpowertools/226): remove this exception.
        "//src/ui/i18n:__subpackages__",
    ],
    deps = [
        "//src/presentation/mainWorldContentScriptBridge/base",
        "//src/services/i18n/chrome",
    ],
)

vitest_test(
    name = "test",
    config = "//:vitest_config",
    data = glob([
        "**/*.ts",
        "**/*.test.ts",
    ]) + [
        "//src/presentation/mainWorldContentScriptBridge/base/tests",
    ],
    node_modules = "//:node_modules",
)
