{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["{TARGET_LOCALES}"],
  "inputFiles": [
    "src/**/components/**/*.(js|ts)",
    "src/features/**/presentation/options/*.(js|ts)",
    "src/presentation/i18n/lit/commonMessages.(js|ts)",
    "src/options/presentation/data/featureCategories.(js|ts)",
    "src/options/presentation/utils/featureUtils.(js|ts)"
  ],
  "output": {
    "mode": "runtime",
    "outputDir": "{OUTPUT_DIR}",
    "localeCodesModule": "{OUTPUT_DIR}/{LOCALE_CODES_FILE}"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "{SOURCE_DIR}"
  }
}
